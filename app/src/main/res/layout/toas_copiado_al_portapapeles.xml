<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/colorVerde">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageButton
                    android:layout_alignLeft="@id/texto_mensajito_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_done_white_24dp"
                    android:background="@color/colorTransparente"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/texto_mensajito_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copiado al portapapeles!"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/cardview_light_background"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15sp"
                    android:layout_marginRight="15dp"
                   />



            </LinearLayout>
        </RelativeLayout>


</android.support.v7.widget.CardView>