<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_container">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_imagen_1_imagen"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/cardview_light_background"/>

            <ImageButton
                android:id="@+id/delete_image_image_item_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/item_imagen_1_imagen"
                android:layout_alignTop="@+id/item_imagen_1_imagen"
                android:layout_alignEnd="@+id/item_imagen_1_imagen"
                android:layout_alignBottom="@+id/item_imagen_1_imagen"
                android:layout_marginStart="130dp"
                android:layout_marginTop="-11dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="131dp"
                android:background="@drawable/circulo_rojo"
                android:src="@drawable/ic_close_black_24dp" />
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>