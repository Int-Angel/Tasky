<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/SubTask_container">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="40dp"
           android:layout_marginTop="10dp">

           <View
               android:layout_width="7dp"
               android:layout_height="7dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/punto_negro"/>

           <EditText
               android:id="@+id/subtarea_1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:hint="sub task"
               android:textColor="@color/colorText2"
               android:textSize="17sp"
               android:fontFamily="sans-serif-condensed"

               android:clickable="false"
               android:focusable="false"

               android:imeOptions="actionGo"
               android:singleLine="true"

               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"/>

       </LinearLayout>

       <CheckBox
           android:id="@+id/checkbox_subtask"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginTop="10dp"


           android:visibility="gone"


           android:background="@drawable/ic_checkbox_1"

           />

       <ImageButton
           android:id="@+id/delete_subtask"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginTop="10dp"

           android:src="@drawable/ic_delete_forever_black_24dp"
           android:background="@android:color/transparent"/>
   </RelativeLayout>


</RelativeLayout>